import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  Widget esqueleto(List<Widget> camposDaTela) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(title: Text("Titulo"), backgroundColor: Colors.red),
        body: Container(
          padding: EdgeInsets.all(16.0),
          child: Card(
            child: Padding(
              padding: const EdgeInsets.all(8.0),
              child: Column(
                mainAxisSize: MainAxisSize.max,
                crossAxisAlignment: CrossAxisAlignment.stretch,
                children: camposDaTela,
              ),
            ),
          ),
        ),
      ),
    );
  }

  Widget camposDeTexto() {
    return Container(
      padding: const EdgeInsets.only(bottom: 40.0),
      child: Column(
        children: [
          TextField(
//controller: controller,
            style: TextStyle(fontSize: 16),
//keyboardType: TextInputType.number,
            decoration: InputDecoration(
                icon: Icon(Icons.task),
                hintText: "Informe o estabecimento",
                labelText: "Estabelecimento"),
          ),
          TextField(
//controller: controller,
            style: TextStyle(fontSize: 16),
//keyboardType: TextInputType.number,
            decoration: InputDecoration(
                icon: Icon(Icons.addchart),
                hintText: "Informe o estabecimento",
                labelText: "Estabelecimento"),
          ),
          TextField(
//controller: controller,
            style: TextStyle(fontSize: 16),
//keyboardType: TextInputType.number,
            decoration: InputDecoration(
                icon: Icon(Icons.alternate_email),
                hintText: "Informe o e-mail",
                labelText: "E-mail"),
          ),
        ],
      ),
    );
  }

  Widget botoes() {
    return Expanded(
      child: Align(
        alignment: FractionalOffset.bottomCenter,
        child: ButtonBar(
          alignment: MainAxisAlignment.end,
          mainAxisSize: MainAxisSize.min,
          children: <Widget>[
            SizedBox(
              width: 150,
              child: OutlineButton(
                child: const Text("Limpar"),
                textColor: Colors.red,
                shape: new RoundedRectangleBorder(
                  borderRadius: new BorderRadius.circular(10.0),
                ),
                onPressed: () {
// to do
                  print("limpar");
                },
              ),
            ),
            SizedBox(
              width: 150,
              child: FlatButton(
                color: Colors.blue,
                child: const Text("Gravar"),
                textColor: Colors.white,
                shape: new RoundedRectangleBorder(
                  borderRadius: new BorderRadius.circular(10.0),
                ),
                onPressed: () {
// to do
                  print("gravar");
                },
              ),
            ),
          ],
        ),
      ),
    );
  }

  Widget campoDeSwitch() {
    return SwitchListTile(
      title: Text(
        "Ativo",
        style: TextStyle(fontSize: 16, color: Colors.red),
      ),
      value: true,
      onChanged: (bool value) {
        print("onChanged: " + value.toString());
      },
      secondary: Icon(Icons.favorite),
    );
  }

  Widget campoDeSlider() {
    return Row(
      children: <Widget>[
        Text(
          "% de confian√ßa",
          style: TextStyle(
            fontSize: 16,
            color: Colors.black54,
          ),
        ),
        Slider(
          value: 1.toDouble(),
          min: 1.0,
          max: 10.0,
          activeColor: Colors.blue,
          inactiveColor: Colors.black26,
          label: "valor",
          onChanged: (double newValue) {
            print("onChanged: " + newValue.toString());
          },
        ),
      ],
    );
  }

  Widget espacamento() {
    return SizedBox(height: 25);
  }

  @override
  Widget build(BuildContext context) {
    var camposDaTela = <Widget>[
      botoes(),
      campoDeSwitch(),
      camposDeTexto(),
      espacamento(),
      campoDeSlider(),
    ];
    return esqueleto(camposDaTela);
  }
}
